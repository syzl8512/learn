# ========================================
# 应用配置
# ========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
ENABLE_SWAGGER=true
SWAGGER_PATH=api-docs

# ========================================
# 数据库配置 (PostgreSQL)
# ========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/reading_app?schema=public"

# ========================================
# Redis 配置
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# JWT 认证配置
# ========================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# 微信小程序配置
# ========================================
WECHAT_APPID=your-wechat-appid
WECHAT_SECRET=your-wechat-secret

# ========================================
# CORS 配置
# ========================================
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# ========================================
# 限流配置
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=info
LOG_DIR=logs

# ========================================
# OSS 存储配置 (阿里云)
# ========================================
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_BUCKET=your-bucket-name
OSS_BASE_URL=https://your-bucket.oss-cn-hangzhou.aliyuncs.com

# ========================================
# TTS 配置 (阿里云)
# ========================================
ALIYUN_TTS_ACCESS_KEY_ID=your-tts-access-key-id
ALIYUN_TTS_ACCESS_KEY_SECRET=your-tts-access-key-secret
ALIYUN_TTS_APP_KEY=your-tts-app-key

# ========================================
# MinerU PDF 转换配置
# ========================================
MINERU_API_KEY=your-mineru-api-key
MINERU_API_URL=https://api.mineru.com/v1

# ========================================
# DeepSeek AI 配置
# ========================================
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# ========================================
# 词典 API 配置 (有道/百度)
# ========================================
YOUDAO_APP_KEY=your-youdao-app-key
YOUDAO_APP_SECRET=your-youdao-app-secret

# ========================================
# 文件上传配置
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.epub,.txt,.md

# ========================================
# Queue 配置 (Bull)
# ========================================
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
