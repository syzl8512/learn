    "adm-zip": "^0.5.16",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "csv-parser": "^3.0.0",
    "fs-extra": "^11.3.2",
    "markdown-it": "^14.1.0",
    "multer": "^2.0.2",
    "nest-winston": "^1.9.4",
    "passport": "^0.7.0",
